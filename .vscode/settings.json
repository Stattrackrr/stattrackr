{
    "editor.suggest.selectionMode": "never",
    // Auto-fetch Git changes periodically
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    // Show notification when changes are available
    "git.enableSmartCommit": true,
    // Auto-pull on folder open (via task)
    "task.autoDetect": "on"
}